@{
    var prodImages = ViewData["Images"] as IEnumerable<ProductImage>;
    var prodImageList = prodImages?.ToList();
   
    var colorName = new SelectList(prodImageList, "ProductColor", "ProductColor");
}


<div id="product-card">
    <h1 id="product-title" style="text-align: center;">عنوان المنتج</h1>
    <p id="product-description" style="text-align: justify;margin-top:120px;position:absolute">Product Description</p>
    <p id="product-price" style="position:absolute;text-align: right; color: green; font-weight: bold;margin-top:120px;margin-left:48%">Product Price</p>

   

    <select id="size-select" style="width: 100%; margin-bottom: 10px;margin-top:160px">
        @if (ViewBag.sizeColor != null)
        {
            foreach (var item in ViewBag.sizeColor)
            {
                <option value="@item.SizeId">@item.Size.SizeName</option>
                
            }
            
        }
       
            
        
    </select>

    <select id="color-select" asp-items="@colorName" style="width: 100%; margin-bottom: 10px;">
        
    </select>


    <input type="text" id="color-select" style="text-align:right;width: 100%; margin-bottom: 10px;" placeholder="الكميه" />

    
    <button id="add-to-cart-button" style="margin-top:10px;width: 100%; background-color: darkslategray; color: white; padding: 10px 0; border: none; cursor: pointer;">اضافة الى السلة</button>
</div>

