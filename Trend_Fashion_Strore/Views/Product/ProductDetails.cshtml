
<style>
    #product-container {
        width: 30%;
        height: 100vh; /* تمت إضافة هذا السطر */
        float: right;
    }

    #image-container {
        position: relative;
        height: 100vh; /* تمت إضافة هذا السطر */
    }

    #thumbnail-container {
        position: absolute;
        top: 0;
        left: 0;
    }

    .thumbnail {
        display: block;
        width: 10%;
        height: 10%;
        cursor: pointer;
    }

    #main-image {
        display: block;
        width: 100%;
        height: auto;
        margin: auto;
    }

    #product-card {
        width: 67%;
        height: 68vh; /* تمت إضافة هذا السطر */
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 2px 2px 6px 0px rgba(0,0,0,0.20);
        padding: 20px;
        margin: 10px auto;
        float: left;
    }
</style>
